<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.potatoexpress.pcpro.potatoexpress.MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="#dddddd"
            android:id="@+id/TopSection">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:weightSum="1">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="68dp"
                    android:id="@+id/imageView"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Potato Express"
                    android:id="@+id/textView"
                    android:textSize="45dp"
                    android:paddingTop="24dp"
                    android:textStyle="bold"
                    android:layout_weight="0.35"
                    android:layout_marginLeft="75dp"
                    android:textColor="#363636" />

            </LinearLayout>

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="95dp"
                android:id="@+id/imageButton"
                android:src="@drawable/ic_setting_light"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/MiddleSection"
            android:background="#29A9D2"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Start"
                android:id="@+id/textView2"
                android:textColor="#FFFFFF"
                android:textSize="50sp"
                android:layout_marginLeft="70dp"
                android:paddingTop="10dp"
                android:layout_marginTop="20dp" />

            <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="216dp"
        android:weightSum="1"
        style="1">

        <ImageButton
            android:layout_width="127dp"
            android:layout_height="124dp"
            android:id="@+id/imageButton1"
            android:src="@drawable/abc_ic_menu_paste_mtrl_am_alpha"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:layout_margin="65dp"
            android:contentDescription="imagebutton1" />
        <ImageButton
            android:layout_width="127dp"
            android:layout_height="124dp"
            android:id="@+id/imageButton2"
            android:src="@mipmap/ic_search"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:layout_margin="65dp" />
        <ImageButton
            android:layout_width="127dp"
            android:layout_height="124dp"
            android:id="@+id/imageButton3"
            android:src="@mipmap/ic_customer"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:layout_margin="65dp" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                style="1"
                android:padding="2dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add delivery note"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                    android:layout_weight="0.21"
                    android:layout_marginLeft="25dp"
                    android:textAllCaps="false"
                    android:gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find delivery note"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                    android:layout_weight="0.42"
                    android:layout_marginLeft="65dp"

                    android:gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customers"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                    android:layout_weight="1"
                    android:layout_marginLeft="45dp"

                    android:gravity="center_horizontal" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/BottomSection"
            android:weightSum="1"
            android:animationCache="false"
            android:background="#FFFFFF"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="126dp"
                    android:layout_height="137dp"
                    android:id="@+id/imageButton4"
                    android:src="@mipmap/ic_inventory"
                    android:background="#FFFFFF"
                    android:scaleType="fitXY"
                    android:saveEnabled="false"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Inventory"
                    android:id="@+id/textView3"
                    android:layout_marginTop="50dp"
                    android:textSize="55sp"
                    android:textColor="#CCCCCC" />
            </LinearLayout>

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/listView"
                android:fastScrollAlwaysVisible="true"
                android:fastScrollEnabled="true"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:scrollbars="vertical" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
